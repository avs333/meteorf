<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/collection_widget_item"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">
       
    <ImageView
	android:id="@+id/w_info"
	tools:scaleType="centerInside"
	android:layout_height="match_parent"
	android:layout_width="0dp"
	android:layout_weight="1"
        android:src="@drawable/no_data" />
    
    <TextView
	android:id="@+id/w_temp"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:layout_gravity="center_vertical"
	android:text="@string/wd_unk_temp"	
	android:layout_weight="1"
	android:gravity="right"
	android:textSize="28sp" />
       
    <LinearLayout
	android:orientation="vertical"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:layout_marginLeft="48dp"
	android:layout_gravity="center_vertical"
	android:layout_weight="1">
    
	<TextView
	    android:id="@+id/w_date"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="@string/wd_md"
	    android:textSize="14sp" />
    
	<TextView
	    android:id="@+id/w_time"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="HH:MM"
	    android:textStyle="bold"
	    android:textSize="14sp" />
        
    </LinearLayout>

</LinearLayout>

